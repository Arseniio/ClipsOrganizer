<UserControl x:Class="ClipsOrganizer.ExportControls.ExportLocalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipsOrganizer.ExportControls"
             mc:Ignorable="d" 
             d:DesignHeight="408" d:DesignWidth="408">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Конечная папка:"/>
            <TextBox Name="TB_TargetFolder" Text="{Binding TargetFolder}" PreviewKeyUp="TB_TargetFolder_PreviewKeyUp" Width="130" />
            <TextBlock VerticalAlignment="Center" Name="TB_FolderExists" Visibility="Hidden" Text="Папка не существует"/>
        </StackPanel>
    </Grid>
</UserControl>
