<UserControl x:Class="ClipsOrganizer.ViewableControls.ImageControls.ImageActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipsOrganizer.ViewableControls.ImageControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Width="300" Grid.Row="0" Name="CB_format" HorizontalAlignment="Left" Margin="10 0 0 0">
            <ComboBoxItem Tag=".jpg"/>
            <ComboBoxItem Tag=".png"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1" >
            <Button Name="Btn_AddToQueue" Content="Добавить в очередь" Click="Btn_AddToQueue_Click" />
            <Button Name="Btn_ExportNow" Content="Экспортировать сейчас" Margin="10 0 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
